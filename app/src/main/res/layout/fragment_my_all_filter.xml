<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="proceedSwitchOn"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:paddingStart="28dp"
        android:paddingTop="32dp"
        android:paddingEnd="28dp">

        <TextView
            style="@style/FilterTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/showBucketList" />

        <com.zinc.mybury_2.ui.TextAndSwitchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:isOn="false"
            app:text="@string/proceedingBucketList" />

        <com.zinc.mybury_2.ui.TextAndSwitchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:isOn="true"
            app:text="@string/succeedBucketList" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="26dp"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/FilterTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="@string/sortStandard" />

        <RadioGroup
            android:id="@+id/sortRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/updateRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:button="@null"
                android:checked="true"
                android:drawableEnd="@drawable/radio_background"
                android:text="@string/sortByUpdate"
                android:textColor="@color/radio_title"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/createRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:button="@null"
                android:checked="false"
                android:drawableEnd="@drawable/radio_background"
                android:text="@string/sortByCreate"
                android:textColor="@color/radio_title"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>
</layout>

