<resources>
    <!-- Base application theme. -->
    <style name="Theme.Waver" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main4</item>
        <item name="colorPrimaryVariant">@color/main3</item>
        <item name="colorOnPrimary">@color/gray1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub_d3</item>
        <item name="colorSecondaryVariant">@color/sub_d2</item>
        <item name="colorOnSecondary">@color/gray1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray1</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/notosanTextView</item>
    </style>

    <style name="Theme.Waver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>