<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BerryBucket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main4</item>
        <item name="colorPrimaryVariant">@color/main3</item>
        <item name="colorOnPrimary">@color/gray1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub_d3</item>
        <item name="colorSecondaryVariant">@color/sub_d2</item>
        <item name="colorOnSecondary">@color/gray1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BerryBucket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BerryBucket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BerryBucket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BucketTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray11</item>
    </style>

    <style name="BucketStateStyle" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>