<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="NonClosableBottomSheetDialogStyle" parent="CustomBottomSheetDialogTheme">
        <item name="behavior_draggable">false</item>
        <item name="state_collapsed">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FilterTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray7</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RadioTextStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/radio_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableEnd">@drawable/radio_background</item>
    </style>

    <style name="PopupTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupOptionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray10</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

